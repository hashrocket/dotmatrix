Plug 'hashrocket/vim-hashrocket'

" staticly check code and highlight errors (async syntastic replacement)
Plug 'w0rp/ale'


if filereadable(expand('~/.vimbundle.local'))
  source ~/.vimbundle.local
endif

" Initialize plugin system
call plug#end()
